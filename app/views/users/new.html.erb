<div class="login-wrap">
	<div class="login-html">
		<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign Up</label>
		<input id="tab-2" type="radio" name="tab" class="for-pwd"><label for="tab-2" class="tab">Sign In</label>
		<div class="login-form">
			<%= bootstrap_form_for @user, :as => :user, :url => users_path do |f| %>
			<div class="sign-in-htm">
				<div class="group">
					<%= f.text_field :name, class: "input", required: true %>
				</div>
				<div class="group">
					<%= f.email_field :email, class: "input", required: true %>
				</div>
				<div class="group">
					<%= f.password_field :password, class: "input", required: true %>
				</div>
				<div class="group">
					<%= f.submit 'Submit' , :class => "button" %>
				</div>
				<div class="hr"></div>
			</div>
			<%end%>
			<div class="for-pwd-htm">
				<%= bootstrap_form_for :user, :as => :user, :url => login_path do |f| %>
				<div class="group">
					<%= f.email_field :email, class: "input", required: true %>
				</div>
				<div class="group">
					<%= f.password_field :password, class: "input", required: true %>
				</div>
				<div class="group">
					<%= f.submit 'Submit' , :class => "button" %>
				</div>
				<%end%>
				<%=link_to "Reset password" , password_path, class: "text-danger"%>
				<div class="hr"></div>

			</div>	
		</div>
	</div>
</div>