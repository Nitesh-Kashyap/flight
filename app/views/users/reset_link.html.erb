
<div class="login-wrap">
	<div class="login-html">
		<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Reset Password</label>
		<div class="login-form">
			<%= bootstrap_form_for :user, :as => :user, :url => success_link_path do |f| %>
			<%= f.hidden_field :reset_code, value: params[:id] %>
			<div class="group">
				<%= f.password_field :Password, class: "input", required: true %>
			</div>
			<div class="group">
				<%= f.password_field :confirm_password,  class: "input", label: "Confirm Password" %>
			</div>
			<div class="group">
				<%= f.submit 'Submit' , :class => "button", :id => "submitbutton" %>
			</div>
			<%end%>
			<div class="hr"></div>
		</div>
	</div>
</div>

<script type="text/javascript">
	var password = document.getElementById("user_Password")
	, confirm_password = document.getElementById("user_confirm_password");

	function validatePassword(){
		if(password.value != confirm_password.value) {
			confirm_password.setCustomValidity("Passwords Don't Match");
			document.getElementById("submitbutton").click();
		} else {
			confirm_password.setCustomValidity('');
		}
	}

	password.onchange = validatePassword;
	confirm_password.onkeyup = validatePassword;
</script>